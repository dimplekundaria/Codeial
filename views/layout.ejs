<html>
<head>
        <title>
        <%= title  %>
        </title>
        <!-- min.ss and min.js links are from cdn noty js and the link is:-> https://cdnjs.com/libraries/noty  -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <!-- add jquery cdn link (must be added below noty) https://cdnjs.com/libraries/jquery -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <%- style %>
        
</head>

<body>
        <%- include('_header'); %>
        
        <main id="layout-main">
        <%- body %>

        </main>


        <%- include('_footer'); %>

        <%- script %>

        <!-- Show flash message by noty js follow link:-> https://ned.im/noty/#/options -->
        <script>
                // for Success message
                <% if(flash.success && flash.success.length>0) { %>
                        new Noty({
                                theme: 'relax',
                                text: "<%= flash.success %>",
                                type: 'success',
                                layout: 'topRight',
                                timeout: 1500
                        }).show();
                <% } %>

                // for error message
                <% if(flash.error && flash.error.length>0) { %>
                        new Noty({
                                theme: 'relax',
                                text: "<%= flash.error %>",
                                type: 'error',
                                layout: 'topRight',
                                timeout: 1500
                        }).show();
                <% } %>
        </script>
        
</body>
</html>